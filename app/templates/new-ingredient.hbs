<div class="ingredients-container">
  <br>
  <h2 class="color-text-default">New ingredient</h2>
  <div class="row">
    <div class="col-sm-12">
      <form>
        <div class="form-group">
          <label for="formName">Name</label>
          <Input type="text" class="form-control" id="formName" placeholder="Ingredient 1" @value={{this.ingredient.name}} />
        </div>
        <div class="form-group">
          <label for="formDescription">Description</label>
          <Input type="text" class="form-control" id="formDescription" placeholder="description" @value={{this.ingredient.description}} />
        </div>
        <button type="button" class="btn btn-danger" {{on "click" (fn this.cancel)}}>Cancel</button>
        <button type="submit"  disabled={{this.isNotValidForm}} class="btn btn-primary" {{on "click" (fn this.addIngredient)}}>Save</button>
      </form>
    </div>
  </div>
</div>